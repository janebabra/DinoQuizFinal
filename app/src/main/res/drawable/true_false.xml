<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="true">
    <shape>
        <gradient
            android:startColor="#c5363739"
            android:endColor="#ff000000"
            android:angle="270" />
        <stroke
            android:width="1dp"
            android:color="#ff868580" />
        <corners
            android:radius="6dp" />
        <padding
            android:left="10dp"
            android:top="10dp"
            android:right="10dp"
            android:bottom="10dp" />
    </shape>
</item>

    <item>
        <shape>
            <gradient
                android:startColor="#fff4f2e9"
                android:endColor="#ff5c5c5c"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#ff868580" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

</selector>